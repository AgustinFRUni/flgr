---
import { gres } from "../static/gres"
import type { iGRES } from "../static/types/gres"

interface Props {
    gresInfo: iGRES
}

const {gresInfo} = Astro.props
---

<div class=" col-span-4 sm:col-span-2 lg:col-span-1  h-full w-full border-2 border-[#292929] hover:bg-[#2c2c2c] duration-300 ease-in-out hover:bg-opacity-40">
    <img src={gresInfo.route} alt="" class="w-60 h-auto px-16 pt-3 mx-auto" >
    <h2 class="text-white text-center mt-2 font-semibold">{gresInfo.title}</h2>
</div>